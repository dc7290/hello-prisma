{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": ".",
    "strictPropertyInitialization": false,
    "target": "es6"
  }
}
